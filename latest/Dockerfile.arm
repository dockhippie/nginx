FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:5ef40d571b3dcba4e603dd6cbb4412b26c3a2bdc59d1d7eb257c1e5177e51bb0

VOLUME ["/etc/nginx/custom.d"]
EXPOSE 8080

WORKDIR /srv/www
CMD ["/usr/bin/container"]

RUN apk update && \
  apk upgrade && \
  groupadd -g 1000 nginx && \
  useradd -u 1000 -d /srv/www -g nginx -s /bin/bash -M nginx && \
  apk add nginx mailcap && \
  rm -rf /var/cache/apk/* /etc/nginx/*

COPY ./overlay /
